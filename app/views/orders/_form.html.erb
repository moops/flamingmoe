<%= form_for(@order, remote: true, html: {class: 'form-horizontal'}) do |f| %>
    <% if @order.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

            <ul>
            <% @order.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :quantity, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.number_field :quantity, class: 'form-input' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :product, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.collection_select(:product_id, Product.all, :id, :name, {}, {class: 'form-input'}) %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-9 col-sm-3">
            <%= f.submit class: 'btn btn-default' %>
        </div>
    </div>
<% end %>