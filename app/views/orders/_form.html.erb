<%= form_for(@order, remote: true, html: {class: 'form-horizontal'}) do |f| %>
    <% if @order.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

            <ul>
            <% @order.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :quantity, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.number_field :quantity, class: 'form-input' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :product, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.collection_select(:product_id, Product.all, :id, :name, {}, {class: 'form-input'}) %>
        </div>
    </div>

    <%= f.fields_for :customer, @order.customer do |c| %>
        <div class="form-group">
            <%= f.label :name, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= c.text_field :name, class: 'form-input' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :email, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= c.text_field :email, class: 'form-input' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :address, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= c.text_field :address, class: 'form-input' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :city, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= c.text_field :city, class: 'form-input' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :country, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= c.text_field :country, class: 'form-input' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :credit_card, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= c.text_field :credit_card, class: 'form-input' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :expiry, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
                <%= c.text_field :expiry, class: 'form-input', placeholder: 'mmyyyy' %>
            </div>
        </div>
    <% end %>

    <div class="form-group">
        <div class="col-sm-offset-9 col-sm-3">
            <%= f.submit class: 'btn btn-default' %>
        </div>
    </div>
<% end %>